<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ongoing_scroll_bg"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

                <LinearLayout
                    android:id="@+id/ongoingLinlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ongoing_driver_card_bg"
                    android:padding="17dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="43dp"
                    android:elevation="6dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="17dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ride_status_bg"
                            android:padding="7dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/driverStatusTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Driver En Route"
                                android:textColor="#166534"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="25dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/profile"
                            android:scaleType="fitXY"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="33dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/driverNameTextView"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="John Smith"
                                />
                            <TextView
                                android:id="@+id/makeTextView"
                                android:textColor="#4B5563"
                                android:textSize="14sp"
                                android:layout_marginBottom="9dp"
                                android:layout_marginStart="1dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Honda Civic â€¢ ABC-1234"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/ongoingRatingBar"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:numStars="5"
                                    style="@style/driverRatingBar"
                                    android:stepSize="1.0"
                                    android:clickable="false"/>
                                <TextView
                                    android:id="@+id/ongoingRatingTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#4B5563"
                                    android:textSize="12sp"
                                    android:text="4"
                                    android:layout_weight="0"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/ongoingAmountTextView"
                                android:textColor="#2563EB"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="$12.50"
                                />
                            <TextView
                                android:id="@+id/ongoingRideType"
                                android:textColor="#6B7280"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Standard"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            tools:ignore="MissingConstraints"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="2dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="15dp"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginEnd="9dp"
                                    android:src="@drawable/ongoing_from_dot"
                                    android:scaleType="fitXY"
                                    />
                                <TextView
                                    android:id="@+id/ongoingFrom"
                                    android:textColor="#374151"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Downtown Mall"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ongoing_to_dot"
                                    android:scaleType="fitXY"
                                    />
                                <TextView
                                    android:id="@+id/ongoingTo"
                                    android:textColor="#374151"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Central Station"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ongoingDriverTimeLinlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ongoing_arrival_bg"
                    android:paddingVertical="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="46dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/standard_car"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="11dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ongoingRideStatusTextView"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Driver is coming to you"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ongoingRideTimeTextView"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_marginEnd="73dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Estimated arrival: 3 minutes"
                            />
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/noOngoingLinlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ongoing_scroll_bg"
                android:padding="17dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="43dp"
                android:elevation="6dp"
                android:clipChildren="false"
                android:clipToPadding="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Ongoing Rides"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
