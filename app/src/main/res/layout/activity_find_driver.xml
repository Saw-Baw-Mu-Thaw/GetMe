<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FindDriverActivity"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/credit_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/ongoing_scroll_bg"
                android:paddingVertical="24dp"
                android:layout_marginHorizontal="19dp"
                android:layout_marginVertical="10dp"
                android:elevation="50dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="29dp"
                    android:src="@drawable/standard_car"
                    android:background="@drawable/current_location_dot"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#111827"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Finding Your Driver"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="28dp"
                    android:layout_marginHorizontal="36dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#6B7280"
                        android:textSize="16sp"
                        android:layout_marginBottom="9dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Please wait while we connect you with a"
                        />
                    <TextView
                        android:textColor="#6B7280"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="nearby driver..."
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_scroll_bg"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/ongoing_from_dot"
                                android:layout_marginEnd="13dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <TextView
                                android:textColor="#6B7280"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Pickup Location"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/findDriverPickupTextView"
                            android:textColor="#111827"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="123 Main Street, Downtown"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E7EB"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="2dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="6dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/ongoing_to_dot"
                                android:layout_marginEnd="13dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <TextView
                                android:textColor="#6B7280"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Drop-off Location"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/findDriverDropoffTextView"
                            android:textColor="#111827"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="24dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="456 Park Avenue, Uptown"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/home_ride_otp_std_img_bg"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="43dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/current_location_dot"
                        android:padding="6dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/nest_clock_farsight_analog_24px"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Estimated Wait Time"
                            />
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="32dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="2-4 minutes"
                            />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/findDriverCancelBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/cancel_btn"
                    android:paddingVertical="20dp"
                    android:layout_marginHorizontal="24dp"
                    android:elevation="15dp"
                    app:backgroundTint="#EF4444"
                    android:text="Cancel Ride"
                    android:textSize="16sp"/>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>