<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/pickupSearchLinLay"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="28dp"
android:gravity="end"
android:orientation="vertical">

<LinearLayout
    android:id="@+id/pickupSearchItemLinlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="51dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/cust_back_btn_bg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchLocationNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="Downtown Shopping Mall"
            android:textColor="#111827"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/searchLocationAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="234 Market Street, Downtown"
            android:textColor="#6B7280"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>