<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <!-- Profile Image / Icon -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#888888"
            android:background="#E0E0E0"/>
    </androidx.cardview.widget.CardView>

    <!-- Route Title -->
    <TextView
        android:id="@+id/txtRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Downtown → Airport"
        android:textColor="#1F2937"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtPrice"
        app:layout_constraintStart_toEndOf="@id/cardImage"
        app:layout_constraintTop_toTopOf="@id/cardImage" />

    <!-- Time and Distance -->
    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2:30 PM • 8.2 km"
        android:textColor="#6B7280"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/txtRoute"
        app:layout_constraintStart_toStartOf="@id/txtRoute"
        app:layout_constraintTop_toBottomOf="@id/txtRoute" />

    <!-- Price -->
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$24.50"
        android:textColor="#1F2937"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtRoute" />

    <!-- Tip Info -->
    <TextView
        android:id="@+id/txtTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="+3.00 tip"
        android:textColor="#10B981"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPrice" />

    <!-- Divider Line -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#F3F4F6"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtRoute"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>